<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Prototipo Sistemas - MINVU</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="keywords" content="adminkit, bootstrap, bootstrap 5, admin, dashboard, template, responsive, css, sass, html, theme, front-end, ui kit, web">
    <link href="../css/app.css" rel="stylesheet">
    <link href="../css/css-prototipo.css" rel="stylesheet">
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/js/prototipo-JS.js"></script>

    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/jquery.dataTables.js" type="text/javascript"></script>
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />

    <script src="~/Scripts/Chart.js"></script>
    <script src="~/Scripts/Chart.min.js"></script>


    <!-- Custom styles for this template-->

</head>
<body>
    <div class="wrapper" style="margin-top:-50px;">
        <nav id="sidebar" class="sidebar js-sidebar">
            <div class="sidebar-content js-simplebar bg-gradient-primary">
                <br />
                <div class="container-fluid">
                    <a href="\">
                        <img id="img-logoPSM" src="..\img\SERVIU-LOGO2.jpg" class="img-fluid" alt="Responsive image">
                    </a>
                </div>
                <br />
                <div id="accordion">
                    <div class="card">
                        <div class="card-header" id="headingOne">

                            <div class="row">
                                <div class="col-2">
                                        <i class="bi bi-file-earmark-bar-graph-fill"></i>
                                </div>
                                <div class="col-10">
                                        <a class="btn btn-link" data-toggle="collapse" data-target="#collapse1" aria-expanded="false" aria-controls="collapseOne">
                                            <b>REGISTRO SISTEMAS</b>
                                        </a>
                                </div>                                
                            </div>
                        </div>

                        <div id="collapse1" class="collapse" aria-labelledby="headingOne" data-parent="#accordion">
                            <div class="card-body">
                                @using (Html.BeginForm("AgregarSistemas", "Registro", FormMethod.Post, new { @class = "user" }))
                                {
                                    <button type="submit" class="list-group-item">
                                        <div class="row align-items-center">
                                            <div class="col-1">
                                                <i class="bi bi-database-add"></i>
                                            </div>
                                            <div class="col-10">
                                                <div class="text-dark">
                                                    - Agregar Sistema.
                                                </div>
                                            </div>
                                        </div>
                                    </button>
                                }
                            </div>

                            <div class="card-body">
                                @using (Html.BeginForm("EditarSistemas", "Registro", FormMethod.Post, new { @class = "user" }))
                                {
                                    <button type="submit" class="list-group-item">
                                        <div class="row align-items-center">
                                            <div class="col-1">
                                                <i class="bi bi-pencil-square"></i>
                                            </div>
                                            <div class="col-10">
                                                <div class="text-dark">
                                                    - Editar Sistema.
                                                </div>
                                            </div>
                                        </div>
                                    </button>
                                }
                            </div>


                            <div class="card-body">
                                @using (Html.BeginForm("Integraciones", "Integraciones", FormMethod.Post, new { @class = "user" }))
                                {
                                    <button type="submit" class="list-group-item">
                                        <div class="row align-items-center">
                                            <div class="col-1">
                                                <i class="bi bi-bounding-box"></i>                                            
                                            </div>
                                            <div class="col-10">
                                                <div class="text-dark">
                                                    - Agregar Integración.
                                                </div>
                                            </div>
                                        </div>
                                    </button>
                                }
                            </div>
                           
                        </div>
                    </div>

                    <div class="card">


                        <div class="card-header" id="headingOne">
                            <i class="bi bi-graph-up-arrow"></i>

                            <a class="btn btn-link" data-toggle="collapse" data-target="#collapse2" aria-expanded="false" aria-controls="collapseOne">
                                <b>CONTROL DE SISTEMAS</b>
                            </a>
                        </div>



                        <div id="collapse2" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion">

                            <div class="card-body">
                                @using (Html.BeginForm("ControlSistemas", "Control", FormMethod.Post, new { @class = "user" }))
                                 {
                                    <button type="submit" class="list-group-item">
                                        <div class="row align-items-center">
                                            <div class="col-1">
                                                <i class="bi bi-bar-chart-line-fill"></i>
                                            </div>
                                            <div class="col-10">
                                                <div class="text-dark">
                                                    - Visualización de sistemas.
                                                </div>
                                            </div>
                                        </div>
                                    </button>
                                 }
                            </div>

                            <div class="card-body">
                                @using (Html.BeginForm("ReporteSistemas", "Control", FormMethod.Post, new { @class = "user" }))
                                {
                                    <button type="submit" class="list-group-item">
                                        <div class="row align-items-center">
                                            <div class="col-2">
                                                <i class="bi bi-clipboard-check-fill"></i>
                                            </div>
                                            <div class="col-10">
                                                <div class="text-dark">
                                                    - Reporte de sistemas.
                                                </div>
                                            </div>
                                        </div>
                                    </button>
                                 }
                            </div>


                        </div>
                    </div>




                </div>
            </div>
        </nav>

        <div class="main">

            <nav class="navbar navbar-expand navbar-light navbar-bg">

                <img id="img-logoHPH" src="..\img\logocircular.png" class="img-fluid" style="width: 80px; height: 80px; " alt="Responsive image">

                <div class="col-1">
                    <a class="sidebar-toggle js-sidebar-toggle">
                        <i class="hamburger align-self-center"></i>
                    </a>
                </div>

                <div class="col-10">
                    <div class="row">
                        <div class="col-6">
                            <div style="font:22px calibri">
                                Bienvenida/o : <b>@Session["strNombre"]</b>
                            </div>

                        </div>

                        <div class="col-6" style="margin-left:-64px">

                            <div class="navbar-collapse collapse">
                                <ul class="navbar-nav navbar-align">
                                    <li class="nav-item dropdown">
                                        <a class="nav-icon dropdown-toggle" href="#" id="alertsDropdown" data-bs-toggle="dropdown">
                                            <div class="position-relative">
                                                <i class="bi bi-bell"></i>
                                                <span class="indicator">4</span>
                                            </div>
                                        </a>
                                    </li>
                                </ul>
                                <div class="dropdown show">
                                    <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="bi bi-gear-fill"></i>
                                    </a>

                                    <div class="dropdown-menu dropdown-menu-end">
                                        <a class="dropdown-item" href="pages-profile.html"><i class="align-middle me-1" data-feather="user"></i> Perfil</a>

                                        @using (Html.BeginForm("CambiaPass", "Seguridad", FormMethod.Post, new { @class = "user" }))
                                        {
                                            <button class="dropdown-item btnPass" href="#" data-toggle="modal" data-target="#cambioPassword" onclick="">
                                                <i class="align-middle me-1" data-feather="settings"></i>
                                                Cambiar Contraseña
                                            </button>
                                        }
                                            <div class="dropdown-divider"></div>
                                                <a class="dropdown-item" href="#"><i class="align-middle me-1" data-feather="help-circle"></i>Centro de ayuda</a>
                                            <div class="dropdown-divider"></div>

                                        @using (Html.BeginForm("CerrarSesion", "Seguridad", FormMethod.Post, new { @class = "user" }))
                                        {
                                            <button type="submit" class="dropdown-item" href="#">Salir</button>
                                        }
                                        </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </nav>


            <div class="container-fluid">
                <div class="body-content">
                    @RenderBody()
                </div>
            </div>

        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")


</body>

</html>
