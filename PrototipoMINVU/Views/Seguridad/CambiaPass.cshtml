@model PrototipoMINVU.Models.Usuario

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="~/css/sweetalert2.css" rel="stylesheet" />
    <script src="~/js/sweetalert2.js"></script>

    <title>Prototipo Sistemas - MINVU </title>

    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <!--<link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet"> -->
    <link href="~/css/csslogin.css" rel="stylesheet" />
    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">

    <style>
       
    </style>

    <script>
        function AlertExito(valor) {
            Swal.fire({
                position: 'top-end',
                icon: 'success',
                title: valor,
                showConfirmButton: false,
                timer: 1500
            })
        }


        function AlertError(valor) {
            Swal.fire({
                icon: 'error',
                title: 'Error de autenticación...',
                text: valor,
                footer: '<a href=""></a>'
            })
        }
    </script>

</head>

<body>

    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row ">                          
                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h3 text-gray-800 mb-4">Prototipo de Sistemas MINVU</h1>
                                    </div>
                                    <h5 class="h3 text-gray-800 mb-4 text-center">Cambio de su contraseña</h5>
                                    @using (Html.BeginForm("CambiarPassword", "Seguridad", FormMethod.Post, new { @class = "user" }))
                                    {
                                        <div class="row" style=" border: 2px solid gray; border-radius: 3px 5px;">
                                            <div class="col-lg-4"></div>
                                            <div class="col-lg-4">
                                                <br />
                                                <div style="margin-left:15px">
                                                    <div class="form-group text-center">
                                                        @Html.TextBoxFor(m => m.Rut, new { @class = "form-control box-success", @placeholder = "Contraseña actual", @type = "password" })
                                                    </div>
                                                    <div class="form-group text-center">
                                                        @Html.PasswordFor(m => m.Contrasena, new { @class = "form-control box-success", @placeholder = "Contraseña nueva", @type = "password" })
                                                    </div>
                                                    <div class="form-group text-center">
                                                        @Html.PasswordFor(m => m.Contrasena, new { @class = "form-control box-success", @placeholder = "Repita contraseña nueva", @type = "password" })
                                                    </div>
                                                    <div class="form-group">
                                                    </div>
                                                </div>
                                                <button type="submit" class="btn btn-outline-success btn-user btn-block ">Cambiar Contraseña</button>

                                            </div>
                                            <div class="col-lg-4"></div>
                                            <div>
                                                <footer class="sticky-footer ">
                                                    <div class="container my-auto">
                                                        <div class="copyright text-center my-auto">
                                                            <span>Copyright &copy; Universidad Tecnológica Metropolitana - Facultad Ingenieria</span>
                                                        </div>
                                                    </div>
                                                </footer>
                                            </div>
                                        </div>
                                    }

                                </div>

                            </div>
                        </div>

                    </div>
                </div>

            </div>

        </div>

    </div>


    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>


</body>

</html>