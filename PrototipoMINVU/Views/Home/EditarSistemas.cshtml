                                                                        <input type="hidden" value="@item.NombreSistema" name="nombre_sistemasedit" />
                                                                        <input type="hidden" value="@item.descripcion" name="descripcion_sistema" />

                                                                        <button type="submit"><i class="bi bi-pencil-square"></i></button>

                                                                    }
                                                                </td>

                                                            </tr>
                                                        }
                                                    }                                                           
